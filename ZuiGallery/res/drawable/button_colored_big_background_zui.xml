<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient android:startColor="@color/button_colored_background_pressed_start_zui" android:endColor="@color/button_colored_background_pressed_end_zui" android:angle="-90.0" />
            <corners android:radius="@dimen/button_big_radius_zui" />
            <padding android:left="@dimen/button_big_padding_horizontal_zui" android:right="@dimen/button_big_padding_horizontal_zui" />
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <gradient android:startColor="@color/button_colored_background_disabled_start_zui" android:endColor="@color/button_colored_background_disabled_end_zui" android:angle="-90.0" />
            <corners android:radius="@dimen/button_big_radius_zui" />
            <padding android:left="@dimen/button_big_padding_horizontal_zui" android:right="@dimen/button_big_padding_horizontal_zui" />
        </shape>
    </item>
    <item android:state_focused="true" android:state_pressed="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/button_colored_background_focus_not_pressed_zui" />
            <corners android:radius="@dimen/button_big_radius_zui" />
            <padding android:left="@dimen/button_big_padding_horizontal_zui" android:right="@dimen/button_big_padding_horizontal_zui" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <gradient android:startColor="@color/button_colored_background_start_zui" android:endColor="@color/button_colored_background_end_zui" android:angle="-90.0" />
            <corners android:radius="@dimen/button_big_radius_zui" />
            <padding android:left="@dimen/button_big_padding_horizontal_zui" android:right="@dimen/button_big_padding_horizontal_zui" />
        </shape>
    </item>
</selector>
<?xml version="1.0" encoding="utf-8"?>
<layer-list
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <size android:height="@dimen/progress_bar_horizontal_height_zui" />
            <solid android:color="@color/progress_background_horizontal_zui" />
            <corners android:radius="3.0dip" />
        </shape>
    </item>
    <item android:id="@android:id/secondaryProgress">
        <scale android:scaleWidth="100%">
            <shape android:shape="rectangle">
                <size android:height="@dimen/progress_bar_horizontal_height_zui" />
                <solid android:color="@color/progress_background_secondary_zui" />
                <corners android:radius="3.0dip" />
            </shape>
        </scale>
    </item>
    <item android:id="@android:id/progress">
        <scale android:scaleWidth="100%">
            <shape android:shape="rectangle">
                <size android:height="@dimen/progress_bar_horizontal_height_zui" />
                <solid android:color="@color/progress_background_primary_zui" />
                <corners android:radius="3.0dip" />
            </shape>
        </scale>
    </item>
</layer-list>
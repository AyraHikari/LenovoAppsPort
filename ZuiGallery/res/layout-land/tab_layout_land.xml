<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@id/bottom_tab_bar" android:background="@color/bottom_tab_background_color" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="fill_parent">
        <LinearLayout android:gravity="center" android:orientation="horizontal" android:id="@id/tab_time" android:layout_width="0.0dip" android:layout_height="fill_parent" android:layout_weight="1.0">
            <ImageView android:layout_gravity="center_vertical" android:id="@id/tab_photo_view" android:background="@drawable/tab_photo" android:layout_width="wrap_content" android:layout_height="wrap_content" />
            <TextView android:layout_gravity="center_vertical" android:id="@id/tab_time_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/appwidget_title" style="@style/TabBottomTextStyle" />
        </LinearLayout>
        <LinearLayout android:gravity="center" android:orientation="horizontal" android:id="@id/tab_albumset" android:layout_width="0.0dip" android:layout_height="fill_parent" android:layout_weight="1.0">
            <ImageView android:layout_gravity="center_vertical" android:id="@id/tab_albumset_view" android:background="@drawable/tab_albumset" android:layout_width="wrap_content" android:layout_height="wrap_content" />
            <TextView android:layout_gravity="center_vertical" android:id="@id/tab_albumset_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/tab_all_albums" style="@style/TabBottomTextStyle" />
        </LinearLayout>
    </LinearLayout>
    <View android:background="@color/tab_layout_bottom" android:layout_width="fill_parent" android:layout_height="0.5dip" />
</RelativeLayout>